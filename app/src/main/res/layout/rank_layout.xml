<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
	<LinearLayout
	    android:id="@+id/rank_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/rank_title"
	    android:orientation="horizontal"
	    android:layout_marginLeft="@dimen/ds40"
	    android:layout_marginRight="@dimen/ds40"
	    android:layout_marginTop="@dimen/ds40">
	    <com.springball.view.CustomFontTextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/name"
	        android:textSize="24sp"
	        android:layout_weight="1"
	        android:textColor="@color/blue"
	        android:paddingLeft="@dimen/ds20"
	        android:paddingTop="@dimen/ds10"
	        android:paddingBottom="@dimen/ds10"/>
	    <com.springball.view.CustomFontTextView 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:text="@string/score"
	        android:textSize="24sp"
	        android:layout_weight="1"
	        android:textColor="@color/blue"
	        android:padding="@dimen/ds5"/>
	</LinearLayout>
	<ListView 
	    android:id="@+id/rank_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/ds40"
	    android:layout_marginRight="@dimen/ds40"
	    android:layout_marginBottom="@dimen/ds40"
	    android:scrollbars="none"
	    android:divider="@null"
	    android:dividerHeight="0dp"
	    android:layout_below="@id/rank_title"></ListView>
</RelativeLayout>
