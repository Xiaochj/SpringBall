<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rank_item" >

    <com.springball.view.CustomFontTextView
        android:id="@+id/name_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/ds10"
        android:paddingLeft="@dimen/ds20"
        android:paddingTop="@dimen/ds10"
        android:text="@string/name"
        android:textSize="20sp" />

    <com.springball.view.CustomFontTextView
        android:id="@+id/score_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/ds5"
        android:text="@string/score"
        android:textSize="20sp" />

</LinearLayout>